<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Polls">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:contentDescription="Outfit"
            android:src="@drawable/dress" />

        <TextView
            android:id="@+id/tv_coke_count"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:textSize="60sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            />

        <Button
            android:id="@+id/btn_coke_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YEAH"
            android:layout_margin="8dp"
            android:onClick="onCokeClicked"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:contentDescription="Outfit"
            android:src="@drawable/dress" />

        <TextView
            android:id="@+id/tv_pepsi_count"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:textSize="60sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            />

        <Button
            android:id="@+id/btn_pepsi_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAH"
            android:layout_margin="8dp"
            android:onClick="onPepsiClicked"
            />


    </LinearLayout>

</LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Comments: "
           android:textSize="30sp">

       </TextView>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Enter comment:"
           android:id="@+id/etcomment"
           android:textSize="30dp">

       </EditText>

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="SEND"
           android:id="@+id/btncomment"
           android:layout_gravity="center">

       </Button>

   </LinearLayout>

</LinearLayout>

